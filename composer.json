{
  "name": "brazebee/sdk",
  "version": "0.1.1",
  "description": "Official PHP SDK for Brazebee customer journey tracking",
  "keywords": [
    "brazebee",
    "customer",
    "journey",
    "analytics",
    "tracking",
    "events",
    "churn",
    "retention"
  ],
  "homepage": "https://github.com/brazebee/brazebee-sdk-php",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Brazebee",
      "email": "dev@brazebee.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "3.5.0",
    "phpstan/phpstan": "^1.12"
  },
  "autoload": {
    "psr-4": {
      "Brazebee\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Brazebee\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "build": [
      "@php -l src",
      "@php -l tests"
    ],
    "test": "phpunit",
    "analyze": "phpstan analyze src tests --memory-limit=1G"
  }
}

